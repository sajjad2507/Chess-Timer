<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211F20"
    tools:context=".fragment.TimerScreen">


    <ImageView
        android:id="@+id/HomeBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/home"
        app:tint="#EDEDED" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/player1Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Player 1"
                android:textColor="#fff" />


            <TextView
                android:id="@+id/player1Timer"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player2Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Player 2"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/player2Timer"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player3Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Player 3"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/player3Timer"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player4Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Player 4"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/player4Timer"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player5Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:text="Player 5"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/player5Timer"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/timer_bg"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/pauseBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/pause"
            app:tint="#EDEDED" />


        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/play"
            app:tint="#EDEDED" />

        <ImageView
            android:id="@+id/refreshBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/refresh"
            app:tint="#EDEDED" />

        <!--        <ImageView-->
        <!--            android:id="@+id/HomeBtn"-->
        <!--            android:layout_width="42dp"-->
        <!--            android:layout_height="42dp"-->
        <!--            android:layout_margin="24dp"-->
        <!--            android:src="@drawable/home"-->
        <!--            app:tint="#EDEDED" />-->
        <!--        -->
    </LinearLayout>

</FrameLayout>